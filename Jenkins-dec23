pipeline{
agent any
stages{
  stage(gitcheckout){
    steps{
      git branch: 'main', credentialsId: 'github', url: 'https://github.com/vinayakanu/my-maven-prject.git'
    }
  }
  stage(build){
    steps{
      sh "mvn clean package"
      sh "mv target/*.war target/myweb.war"
    }
  }
  stage(deploy){
    steps{
      sh """
       deploy adapters: [tomcat9(credentialsId: 'mani', path: '', url: 'http://51.20.249.205:8088/')], contextPath: 'myweb', war: 'target/myweb.war'
      """
      }
    }
  }
}
